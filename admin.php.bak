    <script>
        function toggleEdit(appointmentId) {
            const editForm = document.getElementById('edit-' + appointmentId);
            if (editForm.style.display === 'none' || editForm.style.display === '') {
                // Hide all other edit forms
                const allEditForms = document.querySelectorAll('.edit-form');
                allEditForms.forEach(form => form.style.display = 'none');
                
                // Show this edit form
                editForm.style.display = 'block';
            } else {
                editForm.style.display = 'none';
            }
        }
        
        // Confirm before marking as completed or cancelled
        document.querySelectorAll('button[name="update_status"]').forEach(button => {
            button.addEventListener('click', function(e) {
                const status = this.previousElementSibling.value;
                const action = status === 'completed' ? 'complete' : 'cancel';
                if (!confirm(`Are you sure you want to ${action} this appointment?`)) {
                    e.preventDefault();
                }
            });
        });
    </script>

